platform :ios do
  desc "Build e deploy para o App Store Connect (modo readonly)"
  lane :deploy do
    match(
      type: "appstore",
      app_identifier: "br.com.delivery.thefamous",
      readonly: true
    )

    build_app(
      scheme: "DVRO",
      export_method: "app-store"
    )

    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true
    )
  end
end
